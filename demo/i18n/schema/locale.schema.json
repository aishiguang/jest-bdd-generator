{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-schema.org/draft/2020-12/schema",
  "title": "I18n configurations",
  "description": "Digit-Format configurations. see also: https://bytedance.sg.feishu.cn/sheets/RgKHsad7xhxevWtysE4l4YUfgNd",
  "type": "object",
  "properties": {
    "name": {
      "description": "abbreviation of the language",
      "type": "string"
    },
    "format": {
      "description": "grouping pattern, where to put ',' and '.'",
      "type": "object",
      "properties": {
        "pattern": {
          "description": ". - The decimal separator placeholder. In a computer program, this gets replaced automatically by the actual symbol used for the decimal point in your locale.  Not a real period ; must be retained!\n - The grouping (thousand) separator placeholder. In a computer program, this gets automatically replaced by the actual grouping separator in your language.  Not a real comma ; must be retained!\n0 - The placeholder for the start of a whole number. In a computer program, this gets replaced by an actual digit (or a zero if there aren't enough digits). N ot a real zero(digit) ; must be retained!\n# - The # symbols are place holders for placements of digits based on positions of digit separator. In a computer program, these would be replaced by actual digits. The main use of # is to show the placement of the ',' (grouping separator).",
          "type": "string"
        },
        "minGroupingDigit": {
          "description": "when to start grouping, with 1000 or 10000",
          "type": "number"
        }
      },
      "required": ["pattern"]
    },

    "proportional": {
      "description": "percent and per-mille",
      "type": "object",
      "properties": {
        "percent": {
          "description": "how to display %",
          "type": "string"
        },
        "perMille": {
          "description": "how to display â€°",
          "type": "string"
        }
      },
      "required": ["percent"]
    },

    "currency": {
      "description": "TBD - for ",
      "type": "array",
      "items": {
        "type": "string"
      }
    },

    "compact": {
      "description": "abbreviations for long numbers, i.e. 10000 to 10k",
      "type": "object",
      "patternProperties": {
        "^\\ddigit": {
          "type": "object",
          "properties": {
            "short": {
              "type": "object",
              "properties": {
                "other": {
                  "type": "string"
                },

                "one": {
                  "type": ["string", "null"]
                },

                "two": {
                  "type": ["string", "null"]
                },

                "few": {
                  "type": ["string", "null"]
                },

                "many": {
                  "type": ["string", "null"]
                },

                "zero": {
                  "type": ["string", "null"]
                }
              }
            },

            "long": {
              "type": ["object", "null"],
              "properties": {
                "other": {
                  "type": "string"
                },

                "one": {
                  "type": ["string", "null"]
                },

                "two": {
                  "type": ["string", "null"]
                },

                "few": {
                  "type": ["string", "null"]
                },

                "many": {
                  "type": ["string", "null"]
                },

                "zero": {
                  "type": ["string", "null"]
                }
              }
            }
          }
        }
      }
    },
    "range": {
      "type": "object",
      "properties": {
        "between": {
          "type": "object",
          "properties": {
            "short": {
              "type": "string"
            },
            "long": {
              "type": "string"
            }
          },
          "required": ["short"]
        },

        "approximately": {
          "type": "object",
          "properties": {
            "short": {
              "type": "string"
            },
            "long": {
              "type": "string"
            }
          },
          "required": ["short"]
        },

        "atLeast": {
          "type": "object",
          "properties": {
            "short": {
              "type": "string"
            },
            "long": {
              "type": "string"
            }
          },
          "required": ["short"]
        },

        "atMost": {
          "type": "object",
          "properties": {
            "short": {
              "type": "string"
            },
            "long": {
              "type": "string"
            }
          },
          "required": ["short"]
        }
      },
      "required": ["between", "approximately", "atLeast", "atMost"]
    },
    "scientific": {
      "type": "string"
    }
  },
  "required": ["name", "format", "proportional", "compact", "range", "scientific"]
}
